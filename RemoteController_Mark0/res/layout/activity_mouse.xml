<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
	android:focusable="true" 
	android:focusableInTouchMode="true"
    android:background="#FFDC35" >
     
    <ImageButton android:id="@+id/mouseLeftKeyButton"
        android:src="@drawable/mousekey"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitCenter"
        android:text="Left"
        android:background="#FFDC35" />
    
    <ImageButton android:id="@+id/mouseRightKeyButton"
        android:src="@drawable/mousekey"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
		android:layout_alignTop="@id/mouseLeftKeyButton"
		android:layout_alignParentRight="true"
		android:layout_marginRight="10dp"
        android:text="Right"
        android:background="#FFDC35" />
    
    <ImageButton android:id="@+id/mouseScrollUpButton"
        android:src="@drawable/mousescrollup"
        android:gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="#FFDC35"/>
    
    <ImageButton android:id="@+id/mouseScrollDownButton"
        android:src="@drawable/mousescrolldown"
        android:gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mouseScrollUpButton"
        android:background="#FFDC35"/>
    
    <TextView android:id="@+id/mouseSensitivityText"
        android:text="Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="7dp" />
    
    <SeekBar
        android:id="@+id/mouseSensitivitySeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/mouseSensitivityText"
        android:layout_alignParentRight="true" />
    
    <ImageButton 
	    android:id="@+id/keyboardBackspaceButton"
	    android:src="@drawable/keyboardicon"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:scaleType="fitCenter"
	    android:background="#FFDC35"
	    android:layout_marginTop="5dp"
	    android:layout_below="@id/mouseLeftKeyButton"/>
	
	<ImageButton 
	    android:id="@+id/keyboardSendButton"
		android:src="@drawable/keyboardmsgsend"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:scaleType="fitCenter"
	    android:background="#FFDC35"
	    android:layout_below="@id/mouseLeftKeyButton"
	    android:layout_alignParentRight="true"/>
	
 	<EditText 
        android:id="@+id/keyboardMsgText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
	    android:hint="Type the message"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/mouseLeftKeyButton"
        android:layout_toRightOf="@id/keyboardBackspaceButton"
        android:layout_toLeftOf="@id/keyboardSendButton" >  
        </EditText>
    
</RelativeLayout>